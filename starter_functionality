import datetime

print(datetime.datetime.now().hour)

print(datetime.datetime.now().minute)

print(datetime.datetime.now().second)

def convert(time_value):
    print("The value given as time_value needs to be converted to binary")
    print("once it is converted, it needs to be returned as a tuple of length 6")
    return (0,0,0,0,0,0)

hourInBinary = convert(datetime.datetime.now().hour)
minutesInBinary = convert(datetime.datetime.now().hour)
secondsInBinary = convert(datetime.datetime.now().minute)



